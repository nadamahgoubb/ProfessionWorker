<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
        android:layoutDirection="inherit">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="false"
            android:layoutDirection="inherit"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark">


            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:fitsSystemWindows="false"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <Toolbar
                    android:id="@+id/toolBarLayout"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:background="@color/header"
                    android:contentInsetStart="0dp"
                    android:contentInsetStartWithNavigation="0dp"
                    android:fitsSystemWindows="false"
                    android:paddingTop="@dimen/_5sdp"

                    android:popupTheme="@style/ThemeOverlay.MaterialComponents.Dark"
                    app:layout_collapseMode="pin"
                    app:layout_scrollFlags="scroll">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="@dimen/_8sdp"
                        app:layout_collapseMode="pin">


                        <ImageView
                            android:id="@+id/iv_back"
                            android:layout_width="@dimen/_35sdp"
                     android:visibility="gone"       android:layout_height="@dimen/_35sdp"
                            android:layout_gravity="start"
                            android:padding="@dimen/_2sdp"
                            android:rotation="180"
                            android:src="@drawable/ic_back_"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/iv_menu"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_12sdp"
                            android:src="@drawable/ic_menu"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/iv_back"
                            app:tint="@color/white" />


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </Toolbar>

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_180sdp"
                    android:layout_marginTop="?actionBarSize"
                    android:fitsSystemWindows="true"
                    android:paddingBottom="@dimen/_50sdp"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    app:layout_collapseMode="parallax"
                    app:layout_scrollFlags="exitUntilCollapsed">


                    <ImageView

                        android:id="@+id/lyt_img"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_150sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/header_black_profile"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/btn_add_wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/lyt_img"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/_25sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:text="@string/add_money"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/btn_add_wallet"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        android:paddingVertical="@dimen/_5sdp"

                        android:textColor="@color/gold"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/tv_balance"
                        android:layout_alignParentEnd="true"
                        android:layout_marginHorizontal="@dimen/_20sdp"
                        android:drawableStart="@drawable/ic_wallet"
                        android:drawablePadding="@dimen/_3sdp"
                        android:text="@string/balance"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lyt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_140sdp"
                    android:layout_gravity="bottom|start"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    app:layout_collapseMode="parallax"
                    app:layout_scrollFlags="exitUntilCollapsed">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold"

                        />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/lyt_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_toEndOf="@id/tv_name"
                        android:orientation="vertical">

                        <ImageView

                            android:id="@+id/iv_star"
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:src="@drawable/ic_star_vector"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/iv_star"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_rate_counts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/tv_rate"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/iv_profile"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_above="@id/tv_name"
                        android:layout_gravity="bottom|start"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:src="@drawable/empty_user"
                        app:layout_collapseMode="parallax"

                        app:layout_scrollFlags="exitUntilCollapsed" />

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/iv_edit"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_above="@id/tv_name"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/ic_photo_edit"
                        android:visibility="gone"
                        app:layout_collapseMode="parallax"
                        app:layout_scrollFlags="exitUntilCollapsed" />
                </RelativeLayout>


                <include
                    android:id="@+id/card_subscribation"
                    layout="@layout/item_subscribation_in_profile"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="bottom|end"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:visibility="gone"
                    app:layout_collapseMode="parallax"
                    app:layout_scrollFlags="exitUntilCollapsed" />


            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swiperefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/_20sdp">


                    <LinearLayout
                        android:id="@+id/lyt_data"
                        android:layout_width="match_parent"
                        android:visibility="gone"                       android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <!--     <TextView
                                 android:id="@+id/et_subscribe_plan"

                                 style="@style/editext"
                                 android:drawableEnd="@drawable/spinner_drop_dawn"
                                 android:hint="@string/subscribe_plan"
                                 android:paddingHorizontal="@dimen/_5sdp" />
         -->

                        <EditText
                            android:id="@+id/et_user_name"
                            style="@style/editext"

                            android:hint="@string/user_name" />

                        <EditText
                            android:id="@+id/et_id"
                            style="@style/editext"
                            android:hint="@string/id" />

                        <TextView
                            android:id="@+id/et_coutry"
                            style="@style/text_view"
                            android:drawableEnd="@drawable/spinner_drop_dawn"
                            android:drawablePadding="@dimen/_10sdp"
                            android:hint="@string/country" />

                        <TextView
                            android:id="@+id/et_city"
                            style="@style/text_view"

                            android:drawableEnd="@drawable/spinner_drop_dawn"
                            android:drawablePadding="@dimen/_10sdp"
                            android:gravity="center_vertical"
                            android:hint="@string/city" />

                        <TextView
                            android:id="@+id/et_location"
                            style="@style/text_view"
                            android:drawableEnd="@drawable/ic_location"
                            android:drawablePadding="@dimen/_10sdp"
                            android:hint="@string/location" />

                        <TextView
                            android:id="@+id/et_nationality"
                            style="@style/text_view"
                            android:drawableEnd="@drawable/spinner_drop_dawn"
                            android:drawablePadding="@dimen/_10sdp"
                            android:hint="@string/nationality" />

                        <EditText
                            android:id="@+id/et_email"
                            style="@style/editext"

                            android:hint="@string/email"
                         />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="6">


                            <com.hbb20.CountryCodePicker
                                android:id="@+id/country_code_picker"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1.25"
                                android:background="@drawable/bg_rounded_grey"
                                android:clickable="true"
                                android:gravity="center"
                                app:ccp_defaultNameCode="SA"
                                app:ccp_showFlag="true"
                                app:ccp_showNameCode="false"
                                app:ccp_showPhoneCode="true"
                                app:ccp_textSize="@dimen/_10sdp" />


                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_weight="4.75"
                                android:gravity="center"
                                android:hint=""
                                app:hintAnimationEnabled="false"
                                app:hintEnabled="false"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textView4">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/bg_rounded"
                                    android:hint="@string/phone_number"
                                    android:inputType="phone"
                                    android:paddingHorizontal="@dimen/_12sdp"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/grey_400"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/et_job"

                            style="@style/text_view"


                            android:drawableEnd="@drawable/spinner_drop_dawn"
                            android:drawablePadding="@dimen/_10sdp"
                            android:hint="@string/job" />

                        <TextView
                            android:id="@+id/et_service_details"
                            style="@style/text_view"
                            android:drawableEnd="@drawable/spinner_drop_dawn"
                            android:drawablePadding="@dimen/_10sdp"
                            android:hint="@string/service_details"
                           />


                        <TextView
                            android:id="@+id/tv_service_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:drawableEnd="@drawable/ic_close_gold"
                            android:drawablePadding="@dimen/_5sdp"
                            android:paddingHorizontal="@dimen/_8sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:text="تركيب سبوت لاين "
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/et_ex_experience"


                            style="@style/text_view"
                            android:hint="@string/experience" />

                        <TextView
                            android:id="@+id/et_experience_years"


                            style="@style/text_view"
                            android:hint="@string/experience_years" />

                        <TextView
                            android:id="@+id/et_payment_per_hour"


                            style="@style/text_view"
                            android:hint="@string/et_payment_per_hour" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@color/grey_200">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:paddingHorizontal="@dimen/_8sdp"
                                android:paddingStart="@dimen/_12sdp"
                                android:text="@string/bank_information"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold" />

                        </RelativeLayout>


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_account_id"


                            style="@style/editext"
                            android:hint="@string/account_id" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_account_name"


                            style="@style/editext"
                            android:hint="@string/account_name" />


                        <TextView
                            android:id="@+id/et_bank"
                            style="@style/text_view"

                            android:drawableEnd="@drawable/spinner_drop_dawn"
                            android:drawablePadding="@dimen/_10sdp"
                            android:hint="@string/bank" />

                        <androidx.appcompat.widget.AppCompatEditText

                            android:id="@+id/et_ipan"
                            style="@style/editext"
                            android:hint="@string/ipan_number" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_edit"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="@dimen/_22sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="@string/edit"
                            android:textAllCaps="false"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold"
                            app:cornerRadius="@dimen/_8sdp" />         <!--   <Spinner
                        android:id="@+id/spinner_city"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        style="@style/SpinnerTheme"
                        android:pointerIcon="none"

                        android:spinnerMode="dialog"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView" />-->


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_changepass"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="@dimen/_22sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:backgroundTint="@color/orange_50"
                            android:text="@string/change_password"
                            android:textAllCaps="false"
                            android:textColor="@color/gold"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold"
                            app:cornerRadius="@dimen/_8sdp" />

                        <TextView
                            android:id="@+id/btn_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:shadowColor="@color/gold"
                            android:text="@string/delet_account"
                            android:textColor="@color/gold"
                            android:textColorHint="@color/gold"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold" />

                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
