<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/walkThrougthFragment"
        android:name="com.example.professionworker.ui.fragments.walkThrough.WalkThrougthFragment"
        android:label="WalkThrougthFragment">
        <action
            android:id="@+id/action_walkThrougthFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@+id/auth_navigation"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.professionworker.ui.fragment.SplashFragment"
        android:label="SplashFragment">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:launchSingleTop="true"
            app:destination="@id/loginFragment"
            app:popUpTo="@+id/auth_navigation"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_walkThrougthFragment"
            app:launchSingleTop="true"
            app:destination="@id/walkThrougthFragment"
            app:popUpTo="@+id/auth_navigation"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.professionworker.ui.fragment.register.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:launchSingleTop="true"
            app:destination="@id/loginFragment"
            app:popUpTo="@+id/auth_navigation"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.professionworker.ui.fragment.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/rightAndTermsBottomSheet"
        android:name="com.example.professionworker.ui.bottomShet.RightAndTermsBottomSheet"
        android:label="RightAndTermsFragment" >
        <action
            android:id="@+id/action_rightAndTermsFragment2_to_registerFragment"
            app:launchSingleTop="true"
            app:destination="@id/registerFragment"
            app:popUpTo="@+id/registerFragment"
            app:popUpToInclusive="true" />
     </fragment>
    <fragment
        android:id="@+id/forgetPasswordFragment"
        android:name="com.example.professionworker.ui.fragment.forgertPass.ForgetPasswordFragment"
        android:label="ForgetPasswordFragment" >
        <action
            android:id="@+id/action_forgetPasswordFragment_to_loginFragment"
            app:launchSingleTop="true"
            app:destination="@id/loginFragment"
            app:popUpTo="@+id/auth_navigation"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- <fragment
         android:id="@+id/subscribationFragment"
         android:name="com.example.professionworker.ui.fragment.register.SubscribationFragment"
         android:label="SubscribationFragment" />-->
</navigation>