<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="editext" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item  name="android:minHeight">@dimen/_40sdp</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:background">@drawable/bg_rounded</item>
        <item name="android:textColorHint">@color/grey_400</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingHorizontal">@dimen/_12sdp</item>

        <item name="android:textSize">@dimen/_10sdp</item>

        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/_10sdp</item>

    </style>

    <style name="text_view" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
     <item  name="android:minHeight">@dimen/_40sdp</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:background">@drawable/bg_rounded</item>
         <item name="android:textColorHint">@color/grey_400</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:paddingHorizontal">@dimen/_12sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/_10sdp</item>

    </style>
</resources>